ALL : LIB\TGBIOS.LIB EXP\SELGMDEV.EXP

LIB\TGBIOS.LIB : BUILD\TGBIOS.OBJ
	386LIB LIB\TGBIOS.LIB -CREATE BUILD\TGBIOS.OBJ

BUILD\TGBIOS.OBJ : TGBIOS.ASM
	386ASM TGBIOS.ASM -OBJECT BUILD\TGBIOS.OBJ

# Can be as easy as:
# EXP\SELGMDEV.EXP : SELGMDEV.C INCLUDE\TGBIOS.H
#	HC386 -fsoft SELGMDEV.C LIB\TGBIOS.LIB -o EXP\SELGMDEV.EXP
# Just remember, HC386 options are case sensitive.

BUILD\SELGMDEV.OBJ : SELGMDEV.C
	HCD386 SELGMDEV.C -OBJ BUILD\SELGMDEV.OBJ

EXP\SELGMDEV.EXP : BUILD\SELGMDEV.OBJ LIB\TGBIOS.LIB
	386LINK BUILD\SELGMDEV.OBJ -EXE EXP\SELGMDEV.EXP @LIBS.LN

